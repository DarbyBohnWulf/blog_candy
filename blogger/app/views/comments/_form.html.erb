<h3 class="title">Post a Comment</h3>
<%= form_for [ @article, @comment ] do |c| %>
<div class="form-group">
  <%= c.label :author, "Your Name" %></br>
  <%= c.text_field :author, class: 'form-control' %>
</div>

<div class="form-group">
  <%= c.label :body, "Your Comment" %></br>
  <%= c.text_area :body, class: 'form-control' %>
</div>

<button type="submit" class="btn btn-primary">Submit</button>

<% end %>
